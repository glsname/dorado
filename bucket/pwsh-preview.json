    "architecture": {
        "64bit": {
            "url": "https://github.com/PowerShell/PowerShell/releases/download/v7.4.0-preview.1/PowerShell-7.4.0-preview.1-win-x64.zip",
            "hash": "b0f6627d1a05d8833963487139eb667657429f78eafcc90191ccd2d5347c8af3"
