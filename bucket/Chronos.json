{
    "version": "6.0.3",
    "description": "Chronos Timetracker. Desktop client for JIRA",
    "homepage": "https://chronos.web-pal.com",
    "license": {
        "identifier": "MIT",
        "url": "https://github.com/web-pal/chronos-timetracker/blob/master/LICENSE.md"
    },
    "changelog": "https://github.com/web-pal/chronos-timetracker/releases/tag/v6.0.3",
    "architecture": {
        "64bit": {
            "url": "https://github.com/web-pal/chronos-timetracker/releases/download/v6.0.3/Chronos-Setup-6.0.3.exe",
            "hash": "sha512:fbb1bf3c7dd530220272f9110a6ebd90778b5e42ac93188adb19d998dd0df4281607a63f2cbe80ab6e0f1ef95e1df96282ce7a4b3973b63f3bac730710f3b517",
            "pre_install": [
                "try { Get-Command 'Test-Persistence' -ErrorAction 'Stop' | Out-Null } catch { error 'Shovel flavour of scoop is required'; exit 258 }",
                "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\app-64.7z\" $dir",
                "Remove-AppDirItem '$*', 'Uninst*'"
            ]
        }
    },
    "shortcuts": [
        [
            "Chronos.exe",
            "Chronos"
        ]
    ],
    "checkver": {
        "github": "https://github.com/web-pal/chronos-timetracker"
    },
    "autoupdate": {
        "changelog": "https://github.com/web-pal/chronos-timetracker/releases/tag/v$version",
        "architecture": {
            "64bit": {
                "url": "https://github.com/web-pal/chronos-timetracker/releases/download/v$version/Chronos-Setup-$version.exe",
                "hash": {
                    "url": "$baseurl/latest.yml",
                    "regex": "sha512:\\s+$base64"
                }
            }
        }
    }
}
